{
   "manifest_version": 3,
   "name": "YouTube Screen Cleaner",
   "version": "1.0.0",
   "description": "Toggle the screen-covering controls of YouTube videos",
   "permissions": [
      "activeTab",
      "scripting"
   ],
   "action": {
      "default_title": "YouTube Screen Cleaner",
      "default_icon": {
         "16": "./icons/visible_16.png",
         "48": "./icons/visible_48.png",
         "128": "./icons/visible_128.png"
      }
   },
   "commands": {
      "_execute_action": {
         "suggested_key": {
            "default": "Ctrl+Delete",
            "windows": "Ctrl+Delete"
         }
      }
   },
   "background": {
      "service_worker": "background.js"
   },
   "icons": {
      "16": "./icons/visible_16.png",
      "48": "./icons/visible_48.png",
      "128": "./icons/visible_128.png"
   }
}